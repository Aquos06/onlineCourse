<%- include('./partials/head') %>
<body>
    <style>
        .signin_card{
            height: 400px;
            width: 400px;
            background-color: #bdedfd;
            border-radius: 20px;
            position: relative;
            margin: auto;
            top:10%;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        }
        .row_2{
            display: flex;
            flex-direction: row;
            justify-content: center;
        }
    </style>
    <%- include('./partials/navbar')%>
    <div class="navbar_bot" style = "background-color: #fde4e2;">
        <div class="row_2">
            <button class = "navbar_button secondary" style = "border: 0px solid transparent" onclick="window.location.href='/';">
                <p class = "vertical_center_bot">HOME</p>
            </button>
            <button class = "navbar_button secondary" style = "border: 0px solid transparent" onclick="window.location.href = '/classes';">
                <p href = "/classes" class = "vertical_center_bot">オンライン学習</p>
            </button>
            <button class = "navbar_button secondary" style = "border: 0px solid transparent">
                <p class = "vertical_center_bot">先生のプロフィール</p>
            </button>
            <button class = "navbar_button secondary" style = "border: 0px solid transparent">
                <p class = "vertical_center_bot">QnA</p>
            </button>
            <button class = "navbar_button secondary" style = "border: 0px solid transparent">
                <p class = "vertical_center_bot">私たちに関しては </p>
            </button>
        </div>
      </div>
    <div style = "height: 600px; background-color:#fde4e2">
        <div class="signin_card p-3">
            <h3 class = "text-center"><strong>ログイン</strong></h3>
            <form class = "mt-5" id = "form">
                <div class = "nb-3">
                    <label for = "username" class = "form-label"><strong>Username</strong></label>
                    <input type = "text" class = "form-control" id ="username" placeholder="Enter your Username" >
                </div>
                <div class = "nb-3">
                    <label for = "password" class = "form-label"><strong>Password</strong></label>
                    <input type = "password" class = "form-control" id ="password" placeholder="Enter your Password" >
                </div>
                <div class="alert alert-danger" role="alert"  id="error"   style="display: none;"></div>
                <div class="alert alert-success" role="alert" id="success" style="display: none;"></div>
                <button type = "submit" class = "btn rounded-5 mt-3" style = "background-color: #FECECD; position:relative; float:right; margin-right:20px" id = "button">ログイン</button>
                <br>
                <a href = "/signup/one" style = "text-decoration: none; margin-left:20px;position: absolute; bottom:40px;color:black">Have not make an account?</a>
            </form>
        </div>
    </div>
    <script src = "js/signin.js"></script>
    <%- include('./partials/footer')%>
</body>